<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wondersgroup.downloaddemo.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <Button
        android:id="@+id/btn_xutils_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用xutls下载文件"/>
    <Button
        android:id="@+id/btn_web_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用内置浏览器或第三方工具下载文件"/>
    <Button
        android:id="@+id/btn_basehttp_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用最基本网络求情方式下载"/>
    <Button
        android:id="@+id/btn_android_async_http_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用android_async_http下载"/>
    <Button
        android:id="@+id/btn_opean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开文件"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_webType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取网络类型"
        android:onClick="onClick"/>
</LinearLayout>
